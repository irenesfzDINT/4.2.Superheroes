<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Icon="assets/shield.ico"
        Title="Superhéroes"
        Height="450"
        Width="800">
    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="Width"
                    Value="35"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel x:Name="ContenedorDockPanel">
        <DockPanel DockPanel.Dock="Top"
                   LastChildFill="False">
            <TextBlock x:Name="NombreSHTextBlock"
                       Text="si"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center">
            </TextBlock>

            <Image Source="assets/xmen.png"
                   DockPanel.Dock="Right"></Image>
            <Image Source="assets/avengers.png"
                   DockPanel.Dock="Right"></Image>
        </DockPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Image Source="assets/arrow.png"></Image>
            <TextBlock x:Name="NumeroPaginasTextBlock"
                       Text="3/3"
                       VerticalAlignment="Center"></TextBlock>
            <Image Source="assets/arrow.png"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="180" />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
        <Image x:Name="ImagenSHImage"
               Stretch="Fill"></Image>
    </DockPanel>
</Window>
