<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Icon="assets/shield.ico"
        Title="Superhéroes"
        Height="450"
        Width="800">
    <Window.Resources>
        <local:FondoBooleanConverter x:Key="ConverterFondo"></local:FondoBooleanConverter>
        <local:ImageVisibilityConverter x:Key="Visibility"></local:ImageVisibilityConverter>
        <Style TargetType="Image"
               x:Key="iconos">
            <Setter Property="Width"
                    Value="35"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="ContenedorGrid"
          Background="{Binding Converter={StaticResource ConverterFondo}, Path=Heroe}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <DockPanel DockPanel.Dock="Top"
                       LastChildFill="False"
                       Grid.Row="0">
                <TextBlock Margin="5" x:Name="NombreSHTextBlock"
                           Text="{Binding Path=Nombre}"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="44">
                    <TextBlock.Effect>
                        <DropShadowEffect />
                    </TextBlock.Effect>
                </TextBlock>

                <Image x:Name="XMenImage"
                       Source="assets/xmen.png"
                       Style="{StaticResource iconos}"
                       Visibility="{Binding Converter={StaticResource Visibility}, Path=Xmen}"
                       DockPanel.Dock="Right"></Image>
                <Image x:Name="AvengersImage"
                       Style="{StaticResource iconos}"
                       Source="assets/avengers.png"
                       Visibility="{Binding Converter={StaticResource Visibility}, Path=Vengador}"
                       DockPanel.Dock="Right"></Image>
            </DockPanel>
            <StackPanel Grid.Row="2"
                        DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Image Source="assets/arrow.png"
                       Style="{StaticResource iconos}"></Image>
                <TextBlock x:Name="NumeroPaginasTextBlock"
                           Text="3/3"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="Bold"></TextBlock>
                <Image Source="assets/arrow.png"
                       Style="{StaticResource iconos}"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="180" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </StackPanel>
            <Image Grid.Row="1"
                   x:Name="ImagenSHImage"
                   Source="{Binding Path=Imagen}"
                   Stretch="Fill"></Image>
        </Grid>
    </Grid>
</Window>
